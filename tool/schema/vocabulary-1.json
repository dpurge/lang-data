{
  "title": "",
  "description": "",
  "type": "object",
  
  "required": [
    "meta",
	"data"
  ],
  
  "properties": {
    "meta" : {
	  "title": "",
	  "description": "",
	  "type": "object",
  
      "required": [
        "format",
        "version",
		"language",
		"source",
		"status",
		"tags"
      ],
	  
	  "properties": {
        "format": {
          "description": "name of the file format",
          "type": "string",
		  "enum": ["vocabulary"]
		},
        "version": {
          "title": "version of the file format",
          "description": "",
          "type": "integer"
		},
		"language": {
          "description": "ISO code of the language",
          "type": "string"
		},
		"source": {
          "description": "source of the vocabulary contained in the file",
          "type": "string"
		},
		"status": {
          "description": "status of the work on the file",
          "type": "string",
		  "enum": [
		    "pending",
		    "ready",
		    "hidden"
		  ]
		},
		"tags": {
          "title": "",
          "description": "",
          "type": "array"
		}
	  }
	},
	
    "data" : {
	  "title": "",
	  "description": "",
	  "type": "array",
	  "items": {
        "title": "",
        "description": "",
		"type": "object",
  
      "required": [
        "phrase",
        "transcription",
		"grammar",
		"translation",
		"image",
		"audio",
		"video",
		"note"
      ],
	  
	  "properties": {
        "phrase": {
	      "description": "",
	      "type": "string"
		},
        "transcription": {
	      "description": "",
	      "type": "string"
		},
		"grammar": {
	      "description": "",
	      "type": "string",
		  "pattern": "^(n|v|j|a)?(\\s[a-z0-9]+)*$"
		},
		"translation": {
	      "description": "",
	      "type": "string"
		},
		"image": {
	      "description": "",
	      "type": "string",
          "pattern": "^([a-z0-9\\-]+(\\\\[a-z0-9\\-]+)*\\.svg)?$"
		},
		"audio": {
	      "description": "",
	      "type": "string",
          "pattern": "^([a-z0-9\\-]+(\\\\[a-z0-9\\-]+)*\\.mp3)?$"
		},
		"video": {
	      "description": "",
	      "type": "string",
          "pattern": "^([a-z0-9\\-]+(\\\\[a-z0-9\\-]+)*\\.mp4)?$"
		},
		"note": {
	      "description": "",
	      "type": "string"
		}
	  }
	  }
	}
  }

}